<p id="notice"><%= notice %></p>

<h1>People Change Requests</h1>

<table>
  <thead>
    <tr>
      <th>Person</th>
      <th>Team</th>
      <th>Start</th>
      <th>End</th>
      <th>Fte</th>
      <th>Brexit</th>
      <th>Bmo approved</th>
      <th>Central approved</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pchanges.each do |pchange| %>
      <tr>
        <td><%= pchange.person_id %></td>
        <td><%= pchange.team_id %></td>
        <td><%= pchange.start %></td>
        <td><%= pchange.end %></td>
        <td><%= pchange.fte %></td>
        <td><%= pchange.brexit %></td>
        <td><%= pchange.bmo_approved %></td>
        <td><%= pchange.central_approved %></td>
        <td><%= link_to 'Show', pchange %></td>
        <td><%= link_to 'Edit', edit_pchange_path(pchange) %></td>
        <td><%= link_to 'Destroy', pchange, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

